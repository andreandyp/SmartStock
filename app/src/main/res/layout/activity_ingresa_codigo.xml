<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.ipn.escom.codigoqr.vista.IngresaCodigoActivity">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="51dp"
        android:layout_height="43dp"
        app:srcCompat="@mipmap/ic_vpn_key_black_24dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/textView22"
        android:layout_toStartOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa código"
        android:textColor="#663500"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="34dp"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="298dp"
        android:layout_height="61dp"
        android:text="Se envió el código al correo electrónico elegido, ingresalo para cambiar contraseña"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="99dp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12" />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="173dp"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button7"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:background="#ffce99"
        android:text="Confirmar"
        android:textColor="#663500"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_below="@+id/editText14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />
</RelativeLayout>
